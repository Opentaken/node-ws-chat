<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/login.css' />
  </head>
  <body>
    <div class="login-box">
        <label>账号：<input name='username' type='text'/></label>
        <label>密码：<input name='usercode' type='text'/></label>
        <input value='登陆' type='button'/>
    </div> 
  </body>
  <script src="/javascripts/jq.min.js"></script>
  <script type="text/javascript">
    $("input:button").click(function(){
        $.post('users/login',{
            loginName: $("input[name=username]").val(),
            password: $("input[name=usercode]").val()
        },function(data){
           console.log(data);
            if(data[0]){
              window.location.href="/chat";
              // alert('登录成功');
            }else{
              alert('登录失败');
            }
        })
    })
  </script>  
</html>